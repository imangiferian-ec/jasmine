{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1>Student index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StudentNo</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>MiddleName</th>
                <th>ExtensionName</th>
                <th>Address</th>
                <th>Barangay</th>
                <th>ContactNo</th>
                <th>Email</th>
                <th>Gender</th>
                <th>BirthDate</th>
                <th>BirthPlace</th>
                <th>CivilStatus</th>
                <th>Religion</th>
                <th>Height</th>
                <th>Weight</th>
                <th>YearProfiled</th>
                <th>FatherName</th>
                <th>FatherOccupation</th>
                <th>MotherName</th>
                <th>MotherOccupation</th>
                <th>Guadian</th>
                <th>RelationGuardian</th>
                <th>GuardianContactNo</th>
                <th>MaidenName</th>
                <th>Voter_id</th>
                <th>PersonToNotify</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.studentNo }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.firstName }}</td>
                <td>{{ student.middleName }}</td>
                <td>{{ student.extensionName }}</td>
                <td>{{ student.address }}</td>
                <td>{{ student.barangay }}</td>
                <td>{{ student.contactNo }}</td>
                <td>{{ student.email }}</td>
                <td>{{ student.gender }}</td>
                <td>{{ student.birthDate ? student.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ student.birthPlace }}</td>
                <td>{{ student.civilStatus }}</td>
                <td>{{ student.religion }}</td>
                <td>{{ student.height }}</td>
                <td>{{ student.weight }}</td>
                <td>{{ student.yearProfiled }}</td>
                <td>{{ student.fatherName }}</td>
                <td>{{ student.fatherOccupation }}</td>
                <td>{{ student.motherName }}</td>
                <td>{{ student.motherOccupation }}</td>
                <td>{{ student.guadian }}</td>
                <td>{{ student.relationGuardian }}</td>
                <td>{{ student.guardianContactNo }}</td>
                <td>{{ student.maidenName }}</td>
                <td>{{ student.voterId }}</td>
                <td>{{ student.personToNotify }}</td>
                <td>{{ student.status }}</td>
                <td>
                    <a href="{{ path('student_show', {'id': student.id}) }}">show</a>
                    <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="30">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('student_new') }}">Create new</a>
{% endblock %}
