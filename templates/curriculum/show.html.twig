{% extends 'base.html.twig' %}

{% block title %}Curriculum{% endblock %}

{% block body %}
    <h1>Curriculum</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ curriculum.id }}</td>
            </tr>
            <tr>
                <th>CurriculumCode</th>
                <td>{{ curriculum.curriculumCode }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ curriculum.title }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ curriculum.status }}</td>
            </tr>
            <tr>
                <th>IsFinalized</th>
                <td>{{ curriculum.isFinalized ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('curriculum_index') }}">back to list</a>

    <a href="{{ path('curriculum_edit', {'id': curriculum.id}) }}">edit</a>

    {{ include('curriculum/_delete_form.html.twig') }}
