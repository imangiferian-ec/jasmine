{% extends 'base.html.twig' %}

{% block title %}Subject index{% endblock %}

{% block body %}
    <h1>Subject index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SubjectCode</th>
                <th>SubjectTitle</th>
                <th>Description</th>
                <th>Units</th>
                <th>LectureHour</th>
                <th>LabHour</th>
                <th>IsForHighschool</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.id }}</td>
                <td>{{ subject.subjectCode }}</td>
                <td>{{ subject.subjectTitle }}</td>
                <td>{{ subject.description }}</td>
                <td>{{ subject.units }}</td>
                <td>{{ subject.lectureHour }}</td>
                <td>{{ subject.labHour }}</td>
                <td>{{ subject.isForHighschool ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('subject_show', {'id': subject.id}) }}">show</a>
                    <a href="{{ path('subject_edit', {'id': subject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('subject_new') }}">Create new</a>
{% endblock %}
