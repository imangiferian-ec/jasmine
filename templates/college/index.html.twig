{% extends 'base.html.twig' %}

{% block title %}College index{% endblock %}

{% block body %}
    <h1>College index</h1>

    <table class="table" id="{{ module}}Table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CollegeCode</th>
                <th>Description</th>
                <th>OtherNotes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for college in colleges %}
            <tr>
                <td>{{ college.id }}</td>
                <td>{{ college.collegeCode }}</td>
                <td>{{ college.description }}</td>
                <td>{{ college.otherNotes }}</td>
                <td>
                    <a href="{{ path('college_show', {'id': college.id}) }}">show</a>
                    <a href="{{ path('college_edit', {'id': college.id}) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('college_new') }}">Create new</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script>
        var module = '{{module}}';
    </script>
    <script src="{{ asset('js/datatables.js') }}"></script>
{% endblock %}