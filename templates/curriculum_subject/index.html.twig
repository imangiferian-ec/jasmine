{% extends 'base.html.twig' %}

{% block title %}CurriculumSubject index{% endblock %}

{% block body %}
    <h1>CurriculumSubject index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>YearLevel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for curriculum_subject in curriculum_subjects %}
            <tr>
                <td>{{ curriculum_subject.id }}</td>
                <td>{{ curriculum_subject.yearLevel }}</td>
                <td>
                    <a href="{{ path('curriculum_subject_show', {'id': curriculum_subject.id}) }}">show</a>
                    <a href="{{ path('curriculum_subject_edit', {'id': curriculum_subject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('curriculum_subject_new') }}">Create new</a>
{% endblock %}
