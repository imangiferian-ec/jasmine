{% extends 'base.html.twig' %}

{% block title %}PermissionList{% endblock %}

{% block body %}
    <h1>PermissionList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Function Name</th>
                <td>{{ permission_list.functionName }}</td>
            </tr>
            <tr>
                <th>Route</th>
                <td>{{ permission_list.route }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ permission_list.label }}</td>
            </tr>
            <tr>
                <th>Permitted Roles</th>
                <td>{{ permission_list.permittedRoles ? permission_list.permittedRoles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ permission_list.position }}</td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>{{ permission_list.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is Side Menu</th>
                <td>{{ permission_list.isSideMenu ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('permission_list_index') }}">back to list</a>

    <a href="{{ path('permission_list_edit', {'id': permission_list.id}) }}">edit</a>
{% endblock %}
